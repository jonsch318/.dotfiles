{
	"height": 33, // Waybar height (to be removed for auto height)
	"spacing": 4, // Gaps between modules (4px)
	"output": [
    {{#each waybar_output}}
		"{{this}}"{{#unless @last}},{{/unless}}
    {{/each}}
	],
	"modules-left": [
		"hyprland/workspaces",
		"cava"
	],
	"modules-center": [
		"hyprland/window",
		"clock"
	],
	"modules-right": [
		"cpu",
		"memory",
		"temperature",
		{{#if waybar_include_battery}}
		"battery",
		{{/if}}
		"disk",
		"tray",
		"wireplumber",
		"bluetooth",
		"clock"
	],
	"layer": "top",
	// Modules configuration
	"hyprland/workspaces": {
